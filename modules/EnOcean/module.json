{
	"dependencies": [],
	"singleton": true,
	"category": "peripherals",
	"author": "Z-Wave.Me",
	"homepage": "http://razberry.z-wave.me",
	"icon": "icon.svg",
	"moduleName":"EnOcean",
	"version": "1.0.0",
	"maturity": "stable",
	"repository": {
			"type": "git",
			"source": "https://github.com/Z-Wave-Me/home-automation"
	},
	"defaults": {
		"title": "__m_title__",
		"description": "__m_descr__",
