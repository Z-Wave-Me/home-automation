		"required": false
	},
	"options": {
		"fields": {
			"port": {
				"label": "__l_port__"
			},
			"name": {
				"label": "__l_name__",
				"helper": "__h_name__"
			},
			"enableAPI": {
				"type": "checkbox",
				"rightLabel": "__rl_enableAPI__",
				"helper": "__h_enableAPI__"
			},
			"publicAPI": {
				"type": "checkbox",
				"rightLabel": "__rl_publicAPI__",
				"helper": "__h_publicAPI__"
			},
			"createVDev": {
				"type": "checkbox",
				"rightLabel": "__rl_createVDev__",
				"helper": "__h_createVDev__"
			},
			"config": {
