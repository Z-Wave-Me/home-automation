			"name": {
				"type": "string",
				"required": true
			},
			"enableAPI": {
				"type": "boolean",
				"default": true
			},
			"publicAPI": {
				"type": "boolean",
				"default": true
			},
			"createVDev": {
				"type": "boolean",
				"default": true
			},
			"config": {
				"type": "string",
				"required": true
			}
