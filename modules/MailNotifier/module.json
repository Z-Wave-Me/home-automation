{
  "dependencies": [],
  "singleton": false,
  "category": "notifications",
  "author": "Z-Wave.Me",
  "homepage": "http://z-wave.me",
  "icon": "icon.png",
  "moduleName": "MailNotifier",
  "version": "2.0.0",
  "maturity": "stable",
  "repository": {
	"type": "git",
	"source": "https://github.com/Z-Wave-Me/home-automation"
  },
  "defaults": {
	"title": "__m_title__",
	"description": "__m_descr__",
	"hide": false,
	"subject": "__subject__",
	"mail_to_input": "",
	"mail_to_select": "",
	"allow_input": false
  },
  "schema": {
	"type": "object",
	"properties": {
	  "hide" : {
		"type" : "boolean",
		"required" : false
	  },
	  "mail_message": {
		"required":true
	  },
	  "mail_to_select": {
		"required": false
	  },
	  "allow_input": {
		"type" : "boolean",
		"required": false
	  },
	  "mail_to_input": {
		"required": true
	  },
	  "subject": {
		"required": true
	  }
	},
	"dependencies": {
	  "mail_to_input" : "allow_input"
	}
  },
  "options": {
	"fields": {
	  "hide": {
		"type": "checkbox",
		"rightLabel":"__rl_hidden__"
	  },
	  "mail_message": {
		"type":"textarea",
		"label": "__l_mail_message__",
		"helper": "__h_mail_message__"
	  },
	  "mail_to_select": {
		"type": "select",
		"label": "__l_mail_to__",
		"helper": "__h_mail_to__"
	  },
	  "allow_input": {
		"type": "checkbox",
		"rightLabel":"__rl_allow_input__"
	  },
	  "mail_to_input": {
		"label": "__l_mail_to__",
		"helper": "__h_mail_to__",
		"dependencies": {
		  "allow_input" : true
		}
	  },
	  "subject": {
		"label": "__l_subject__",
		"helper": "__h_subject__"
	  }
	}
  },
  "postRender": "loadFunction:postRender.js"
}