{
	"dependencies": [],
	"singleton": false,
	"category": "notifications",
	"author": "Z-Wave.Me",
	"homepage": "http://razberry.z-wave.me",
	"icon": "icon.png",
    "moduleName":"Notification",
	"version": "1.0.0",
	"maturity": "stable",
	"repository": {
		"type": "git",
		"source": "https://github.com/Z-Wave-Me/home-automation"
	},
	"defaults": {
		"title": "__m_title__",
		"description": "__m_descr__",
		"message" : "",
		"phone": "",
		"api_key_sms": "",
		"email" : "",        
        "api_key_email": ""		
	},
	"schema": {
		"type": "object",
		"properties": {
			"message": {
				"type": "string",
                "required": true
			},
			"phone": {
                "required": false,
                "pattern": "[1-9][0-9]*"
            },
            "api_key_sms": {
                "required": false,
                "pattern": "[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}"
            },
            "email": {
				"type": "string",
                "required": false
			},
            "api_key_email": {
                "required": false            
            }
		},
		"required": false
	},
	"options": {
		"fields": {
			"message": {
				"label": "__l_message__"
			},
			"phone": {
                "label": "__l_phone__"
            },
            "api_key_sms": {
                "label": "__l_api_key_sms__",
				"helper": "__h_api_key_sms__"
            },
			"email": {
				"label": "__l_email__"
			},
			"api_key_email": {
                "label": "__l_api_key_email__",
				"helper": "__h_api_key_email__"
            }
		}
	}
}
