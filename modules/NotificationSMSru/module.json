{
    "dependencies": [],
    "singleton": false,
    "category": "support_external_dev",
    "author": "Z-Wave.Me",
    "homepage": "http://razberry.z-wave.me",
    "icon": "icon.png",
    "moduleName":"NotificationSMSru",
    "version": "1.1.0",
    "maturity": "stable",
    "repository": {
            "type": "git",
            "source": "https://github.com/Z-Wave-Me/home-automation"
    },
    "defaults": {
        "title": "__m_title__",
        "description": "__m_descr__",
        "level": ["critical", "error", "warning", "info", "device-info", "notification"],
        "api_key": "",
        "phone": "",
	    "prefix": "__prefix__"
    },
    "schema": {
        "description": "__description__",
        "type": "object",
        "properties": {
            "level": {
                    "type": "array",
                    "enum": ["critical", "error", "warning", "info", "device-info", "notification"],
                "required": true
            },
            "phone": {
                "required": true,
                "pattern": "[1-9][0-9]*"
            },
            "prefix": {
                "required": false
            },
            "api_key": {
                "required": true,
                "pattern": "[A-Fa-f0-9]{8}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{12}"
            }
        },
        "required": false
    },
    "options": {
        "fields": {
            "level": {
                    "type": "checkbox",
                    "optionLabels": ["__critical__", "__error__", "__warning__", "__info__", "__device-info__", "__notification__"]
            },
            "phone": {
                "label": "__l_phone__"
            },
            "prefix": {
                "label": "__l_prefix__"
            },
            "api_key": {
                "label": "__l_api_key__",
		        "helper": "__h_api_key__"
            }
        }
    }
}