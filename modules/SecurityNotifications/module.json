{
	"autoload": false,
	"singleton": true,
	"userView": true,
	"defaults": {
		"title": "Security notifications",
		"description": "Notify on changes of sensors and switches state",
		"binary": [],
		"multilevel": []
		"triggerScene": null
	},
	"schema": {
		"type": "object",
		"properties": {
			"binary": {
				"type": "object",
                                "properties": {
                                        "id": {
                                                "field": "enum",
                                                "datasource": "namespaces",
                                                "enum": "namespaces:devices_sensorBinary:deviceId,namespaces:devices_switchBinary:deviceId",
                                                "required": true
                                        },
                                        "safeStatus": {
                                                "type": "select",
                                                "required": true,
                                                "enum": ["false", "true"]
                                        }
				}
			},
			"multilevel": {
				"type": "object",
                                "properties": {
                                        "id": {
                                                "field": "enum",
                                                "datasource": "namespaces",
                                                "enum": "namespaces:devices_sensorMultilevel:deviceId,namespaces:devices_switchMultilevel:deviceId",
                                                "required": true
                                        },
                                        "greater": {
                                                "type": "select",
                                                "required": true,
						"enum": ["false", "true"]
                                        },
                                        "safeBorder": {
                                                "type": "number",
                                                "required": true
                                        }
				}
			},
			"triggerScene": {
				"field": "enum",
				"datasource": "namespaces",
				"enum": "namespaces:scenes:sceneId"
			}
		},
         	"required": false
	},
	"options": {
		"fields": {
			"binary": {
				"label": "Binary devices:",
                                "fields": {
                                        "id": {
                                                "datasource": "namespaces",
                                                "field": "optionLabels",
                                                "optionLables": "namespaces:devices_sensorBinary:deviceName,namespaces:devices_switchBinary:deviceName"
                                        },
                                        "safeStatus": {
                                                "optionLabels": ["Off", "On"]
                                        }
				}
			},
			"multilevel": {
				"label": "Multilevel devices:",
				"type": "object",
                                "properties": {
                                        "id": {
                                                "datasource": "namespaces",
                                                "field": "optionLabels",
                                                "optionLables": "namespaces:devices_sensorMultilevel:deviceName,namespaces:devices_switchMultilevel:deviceName"
                                        },
                                        "greater": {
						"optionLabels": ["<", ">"]
                                        },
                                        "safeBorder": {
                                        }
				}
			},
			"triggerScene": {
                                "datasource": "namespaces",
                                "field": "optionLabels",
                                "optionLables": "namespaces:scenes:sceneName"
			}
		}
	}
}
